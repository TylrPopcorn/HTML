   <button> This is a button </button>

   <script>
       var btn = document.querySelector("button"); //Get the button.

        /* Simple Example:
       function ouch(){
           alert("I told you I was a buttson.");
       }

       btn.onclick = ouch; //Allow the button to be clicked on.
        */

        //Listen:
      btn.addEventListener(
          'click', 
          function(event){  //Make the button turn red
            event.target.style.backgroundColor = "red"

            alert("I told you I was a button. Now I am angry!");  //Alert.
            }
        );
   </script>
